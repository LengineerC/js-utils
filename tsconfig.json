{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ]
}
